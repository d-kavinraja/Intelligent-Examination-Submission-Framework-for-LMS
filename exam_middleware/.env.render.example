# ===========================================
# Render Deployment - Environment Variables
# ===========================================
# Set these in Render Dashboard → Your Service → Environment

# DATABASE_URL is auto-set by Render when you link a PostgreSQL database
# DATABASE_URL=postgres://user:password@host:5432/dbname

# Security (Render can auto-generate this)
SECRET_KEY=<auto-generated-by-render>
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Application
DEBUG=false
LOG_LEVEL=INFO

# ===========================================
# Moodle Configuration (MoodleCloud)
# ===========================================
MOODLE_BASE_URL=https://saveetha-exam-middleware.moodlecloud.com
MOODLE_ADMIN_TOKEN=91ddb0ff0a01c7f4a0ac91378a545bdc
MOODLE_SERVICE=moodle_mobile_app

# ===========================================
# File Storage
# ===========================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=50
ALLOWED_EXTENSIONS=.pdf,.jpg,.jpeg,.png

# ===========================================
# CORS (allow all origins for now)
# ===========================================
CORS_ORIGINS=["*"]
